{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">

            <div class="panel panel-primary">
                <div class="panel-heading">
                </div>
                <div class="panel-body">

                    {{ form_start(form, {'action': path('guardarEquipo'), 'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'name', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.liga, 'liga', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.liga, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>

                    <div class="form-group">
                        {{ form_label(form.division, 'division', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.division, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-5">
                            {{ form_widget(form.save, {'label': titulo, 'attr': {'class': 'btn btn-primary', 'role': 'button'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}