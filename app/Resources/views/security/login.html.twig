{% extends 'base.html.twig' %}
{% block registro %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div id="wrapper">
    <div id="container">

<form action="{{ path('login') }}" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username:</label>
        <div class="col-sm-5">
            <input type="text" id="username" name="_username" class="form-control" required>
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-5">
            <input type="password" id="password" name="_password" class="form-control" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <button type="submit" class="btn btn-primary" role="button">Login</button>
        </div>
</form>
    </div>


    </div>
</div>

{% endblock %}